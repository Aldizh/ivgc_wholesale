<div class="content_wrapper">
<h2 style="text-align: center;"> Contact Us </h2>
<% if flash[:error] %>
  <span class="error" >
    <%= flash[:error] %>
  </span>
<% end %>
<div class="common_form" style="font-size: 80%;">
  <%= form_tag(:action => "contactUs") do %>
    <%= label_tag "Full Name: " %>
    <%= text_field_tag 'full_name', session[:full_name] %><br>
    <%= label_tag "Email: " %>
    <%= text_field_tag 'email', session[:email] %><br>
    <%= label_tag "Message:" %><br>
    <%= text_area_tag 'message', session[:message] %><br>
    <%#= recaptcha_tags %>
    <%= submit_tag "Submit", :class => "common_btn", :id => "sign_up_btn" %>
  <% end %>
  </div>
</div>
