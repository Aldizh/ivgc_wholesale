<div class="content_wrapper">
	<h1><%= t ".headline"%></h1>
	<h2 style="text-align: center;"><%= t ".title" %></h2>
	<% if flash[:error] %>
	  <span class="error" >
	    <%= flash[:error] %>
	  </span>
	<% end %>
<div class="common_form" style="font-size: 80%; text-align: left;">
  <%= form_tag(:action => "voipResellerSignUp") do %>
    <%= label_tag t(".first_name") %>
    <%= text_field_tag 'first_name', session[:first_name] %><br>
    <%= label_tag t(".last_name") %>
    <%= text_field_tag 'last_name', session[:last_name] %><br>
    <%= label_tag "Email: " %>
    <%= text_field_tag 'email', session[:email] %><br>
    <%= label_tag t(".phone") %>
    <%= text_field_tag 'phone', session[:phone] %><br>
    <strong><%= label_tag t(".country") %></strong><br>
    <%= country_select("country", "country_name") %><br><br>
    <div class="radio_btn_group">
		<strong><%= t(".language") %></strong><br><br>
    	<div id="left">
	    	<%= radio_button_tag 'language', 'english', true %><%= t('.english')%><br>
	    	<%= radio_button_tag 'language', 'spanish' %><%= t('.spanish') %><br>
	    	<%= radio_button_tag 'language', 'arabic' %><%= t('.arabic') %><br>
	    	<%= radio_button_tag 'language', 'french' %><%= t('.french') %>
    	</div>
    	<div id="right">
	    	<%= radio_button_tag 'language', 'hindi' %><%= t('.hindi') %><br>
	    	<%= radio_button_tag 'language', 'urdu' %><%= t('.urdu') %><br>
	    	<%= radio_button_tag 'language', 'portuguese' %><%= t('.portuguese') %><br>
	    	<%= radio_button_tag 'language', 'other' %><%= t('.other') %>
    	</div>
	</div>

	<div class="radio_btn_group">
		<strong><%= t ".business" %></strong><br><br>
		<div id="left">
    		<%= radio_button_tag 'business', 'reseller_agent', true %><%= t ".reseller" %><br>
    		<%= radio_button_tag 'business', 'ip_2_ip_wholesale' %><%= t ".ip" %><br>
    		<%= radio_button_tag 'business', 'call_shop' %><%= t ".call_shop" %>
    	</div>
    	<div id="right">
	    	<%= radio_button_tag 'business', 'call_center' %>Call Center<br>
	    	<%= radio_button_tag 'business', 'other' %><%= t ".other" %><br>
	    	<%= radio_button_tag 'business', 'personal' %><%= t ".personal" %>
	    </div>

	</div>

	<div class="radio_btn_group">
		<strong><%= t ".consumption" %></strong><br><br>
		<div id="left">
    		<%= radio_button_tag 'revenue', '500_or_less', true %>$500 or less<br>
    		<%= radio_button_tag 'revenue', '500-2000' %>$500 – $2,000<br>
    		<%= radio_button_tag 'revenue', '2000-5000' %>$2,000 – $5,000<br>
    		<%= radio_button_tag 'revenue', '5000-10000' %>$5,000 – $10,000
    	</div>
    	<div id="right">
	    	<%= radio_button_tag 'revenue', '10000-20000' %>$10,000 – $20,000<br>
	    	<%= radio_button_tag 'revenue', '20000-30000' %>$20,000 – $30,000<br>
	    	<%= radio_button_tag 'revenue', '30000-50000' %>$30,000 – $50,000<br>
	    	<%= radio_button_tag 'revenue', '50000_or_more' %>$50,000 <%= t ".more" %><br>
	    	<%= radio_button_tag 'revenue', 'none' %><%= t ".none" %>
	    </div>

	</div>
	
	<%= label_tag t(".comments") %><br>
    <%= text_area_tag 'comments', session[:comments] %><br>
    <%#= recaptcha_tags %>
    <%= submit_tag t(".send"), :class => "common_btn", :id => "sign_up_btn" %>
  <% end %>
  </div>
</div>
