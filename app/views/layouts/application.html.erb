<!DOCTYPE html>
<html>
<head>
  <title>IVGC Voip Wholesale Platform</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<h1>
		<%= link_to image_tag("ivgc_logo.png"), root_path %></h1>
	<p>VOIP Wholesale</p>
</header>
<% if session[:current_login] %>
	<section class="logout_link"><%= link_to "Log out", '/sessions/destroy', :class => 'logout_link' %></section>
	<nav class="main_menu">
		<ul>
			<%if session[:admin] == true %>
				<li><%= link_to "View Tickets", "/admin/viewTickets" %></li>
				<li><%= link_to "See account lists", "/accounts/accountList" %></li>
			<%else%>
				<li><%= link_to "Account Overview", '/accounts/accountInfo' %></li>
				<li><%= link_to "Update your account", "/accounts/updateAccount" %></li>
				<li><%= link_to "Manage my IPs", "/accounts/manageIP" %></li>
				<li><%= link_to "Add Credits", "/accounts/addCredits" %></li>
				<li><%= link_to "View CDR", "/accounts/viewCDR" %></li>
				<li><%= link_to "Tickets", "/tickets" %></li>
			<%end%>
		</ul>
	</nav>
<%end%>
<%= yield %>

<footer>
	<nav>
		<ul>
			<li><%= link_to "About", "#" %></li>
			<li><%= link_to "Disclaimer", "#" %></li>
			<li><%= link_to "Contact Us", "#" %></li>
			<li><%= link_to "Copyrights", "#" %></li>
		</ul>
	</nav>
</footer>

</body>
</html>
